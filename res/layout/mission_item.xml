<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_option"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewMissionPic"
        android:layout_width="178dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/content_description"
        android:scaleType="fitXY"
        android:src="@drawable/downloadwait" />

    <TextView
        android:id="@+id/textViewMissionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:text="@string/message"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Gray"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/textViewMissionReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/content_description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#46d0f3"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageViewMissionQR"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/content_description"
            android:scaleType="centerInside"
            android:src="@drawable/item_qr" />
    </RelativeLayout>

</LinearLayout>