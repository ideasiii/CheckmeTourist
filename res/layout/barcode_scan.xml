<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayoutScanMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SurfaceView
            android:id="@+id/surfaceViewScanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageViewFrameScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY"
            android:src="@drawable/a_sight_block" />

        <View
            android:id="@+id/viewSperater"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imageViewScanRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/viewSperater"
            android:layout_toRightOf="@id/viewSperater"
            android:contentDescription="@string/content_description"
            android:src="@drawable/a_sight" />

        <ImageView
            android:id="@+id/imageViewScanLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/viewSperater"
            android:layout_toStartOf="@id/viewSperater"
            android:contentDescription="@string/content_description"
            android:src="@drawable/a_sight" />

        <TextView
            android:id="@+id/textViewScanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageViewFrameScan"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="42dp"
            android:background="@color/Black_Gray_Deep"
            android:padding="10dp"
            android:text="@string/scan_qr_code"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>